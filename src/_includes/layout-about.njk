<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or "About Panos Tsomakos" }}</title>
  <link rel="stylesheet" href="/assets/css/styles.css">
  <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</head>
<body>
  <!-- Fixed Navigation Menu -->
  <nav class="fixed-menu">
    <div class="nav-button panos-button">
      <a href="/">PANOS TSOMAKOS</a>
    </div>
    <div class="nav-button private-button">
      <a href="/private/">PRIVATE</a>
    </div>
    <div class="nav-button commissioned-button">
      <a href="#" id="commissioned-toggle">COMMISSIONED</a>
    </div>
    <ul id="commissioned-menu">
      {% for project in collections.projects %}
        <li><a href="{{ project.url }}">{{ project.data.title }}</a></li>
      {% endfor %}
    </ul>
  </nav>

  <!-- Main Content with Image and Text -->
  <main class="about-container">
    {{ content | safe }}
  </main>

  <script>
    const toggle = document.getElementById('commissioned-toggle');
    const menu = document.getElementById('commissioned-menu');
    toggle.addEventListener('click', (e) => {
      e.preventDefault();
      menu.classList.toggle('show');
      window.scrollTo(0, 0); // Prevent scrolling to bottom
    });

    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        const urlParams = new URLSearchParams(window.location.hash.replace("#", "?"));
        const token = urlParams.get("confirmation_token");
        if (token && !user) {
          window.netlifyIdentity.on("login", () => {
            window.location.href = "/admin/";
          });
          window.netlifyIdentity.open("login");
        } else if (user) {
          if (window.location.pathname !== "/admin/") {
            window.location.href = "/admin/";
          }
        }
      });
    }
  </script>
</body>
</html>